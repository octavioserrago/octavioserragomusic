---
import { releases } from "../data/releases.js";
---

<section id="music" class="py-20 px-6 max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">Releases</h2>

    <div class="overflow-x-auto whitespace-nowrap scrollbar-hide">
        <div class="flex gap-8 px-2">
            {
                releases.map((release) => (
                    <a
                        href={`/releases/${release.slug}`}
                        target="_blank"
                        class="inline-block w-80 bg-white/5 border border-white/10 rounded-xl p-4 text-white backdrop-blur-md hover:scale-105 transition-transform"
                    >
                        <img
                            src={release.cover}
                            alt={release.title}
                            class="w-full h-48 object-contain rounded-md mb-4 bg-black"
                        />
                        <h3 class="text-xl font-semibold mb-2">
                            {release.title}
                        </h3>
                        <p class="text-sm text-gray-400 mb-3">{release.type}</p>
                        <ul class="list-disc list-inside text-sm text-gray-300 space-y-1">
                            {release.tracks.map((track) => (
                                <li>{track}</li>
                            ))}
                        </ul>
                    </a>
                ))
            }
        </div>
    </div>
</section>
